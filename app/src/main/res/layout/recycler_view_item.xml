<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:orientation="horizontal"
    android:padding="8dp">

  <ImageView
      android:id="@+id/imageViewOperation"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:backgroundTint="#cbd5f6"
      tools:src="@tools:sample/avatars" />

  <LinearLayout
      android:id="@+id/linearLayoutDescription"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

      <TextView
          android:id="@+id/textViewOperation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:fontFamily="@font/roboto"
          android:text="Despesa"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textViewValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:fontFamily="@font/roboto"
          android:paddingRight="10dp"
          android:text="R$ -10,00"
          android:textAlignment="textEnd"
          android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textViewDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:fontFamily="@font/roboto"
          android:maxWidth="220dp"
          android:paddingLeft="10dp"
          android:text="Descrição Descrição Descrição Descrição Descrição" />

      <TextView
          android:id="@+id/textViewTimestamp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:fontFamily="@font/roboto"
          android:gravity="center"
          android:justificationMode="none"
          android:paddingRight="10dp"
          android:text="15/06/2025 18:00"
          android:textAlignment="textEnd" />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>